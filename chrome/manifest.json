{
  "name": "Hopscotch Tours for CloudPaks",
  "version": "0.3.0",
  "version_name": "0.3.0 alpha",
  "manifest_version": 2,
  "author": "Sanjay Joshi (joshisa@us.ibm.com)",
  "default_locale": "en",
  "description": "This extension was created with curiosity",
  "options_page": "src/config/options.html",
    "options_ui": {
    "chrome_style": true,
    "page": "src/config/options.html"
  },
  "permissions": [
    "storage"
  ],
  "homepage_url": "https://example.com",
  "icons": {
    "16": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "web_accessible_resources": [
  ],
  "offline_enabled": false,
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*",
        "file://*/*"
      ],
      "exclude_matches": [
      ],
      "css": ["css/hopscotch.css"],
      "js": [
        "js/xhrproxy.js",
        "src/inject/inject.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ]
}
